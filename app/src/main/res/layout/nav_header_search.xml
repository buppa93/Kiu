<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@mipmap/materail"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.PopupOverlay"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstprofile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:paddingTop="20dp"
        android:src="@drawable/user1"
        android:layout_weight="1.38"
        android:layout_above="@+id/kiuwername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/kiuwername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/kiuwername"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/kiuwermail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondprofile"
        android:layout_alignEnd="@+id/secondprofile"
        android:textColor="@color/cardview_light_background"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/kiuwermail"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="@string/kiuwermail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:textColor="@color/cardview_light_background"/>

