<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/my_listview_item"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@mipmap/green_marker"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ImageView>


        <TextView
            android:text="Testo1"
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeItemTitle"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_above="@+id/itemBody"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_toEndOf="@+id/itemImage"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">
        </TextView>

        <TextView
            android:text="Testo2"
            android:textColor="@color/material_grey_600"
            android:id="@+id/itemBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeItemBody"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="5dp"
            android:layout_alignBottom="@+id/itemImage"
            android:layout_alignLeft="@+id/itemTitle"
            android:layout_alignStart="@+id/itemTitle">
        </TextView>

</RelativeLayout>